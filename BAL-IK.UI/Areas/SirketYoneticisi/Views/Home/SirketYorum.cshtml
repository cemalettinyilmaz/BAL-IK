@using BAL_IK.UI.ViewModels

@model YorumEkleWM


  <div class="col-12 col-xl-4">
         
                    <div class="card-body p-3">
                        <p class="text-sm">
                          BAL-IK Hakkında görüşlerinizi bildirmenizden mutluluk duyarız.
                        </p>
                        <form method="post" class="text-start">
                            <input hidden asp-for="YorumResponse.YorumId">
                            <div class="card card-background">
                                <div class="full-background" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80')"></div>
                                <div class="card-body">
                                        <label >Yorum Başlığı</label>
                                    <div class="input-group input-group-outline my-3">
                                        <div>
                                        </div>
                                        <textarea required id="baslik" readonly asp-for="YorumResponse.YorumBaslik" type="text" style="color:white;" class="form-control"></textarea>
                                    </div>
                                        <label >Yorum İçeriği</label>

                                    <div class="input-group input-group-outline my-3">
                                        <textarea required id="icerik" readonly asp-for="YorumResponse.YorumIcerik" type="text-area" style="color:white;"  rows="4" cols="50" class="form-control"></textarea>
                                    </div>                           
                                                               
                                    <div class="input-group input-group-outline my-3">
                                        <a id="duzenle" onClick="Duzenle()" class="btn btn-secondary">Yorum Ekle-Düzenle</a>
                                        <button hidden id="ekle" class="btn btn-secondary">Yorum Ekle</button>
                                        <a hidden id="iptal" onClick="Iptal()" class="btn btn-secondary ms-2">İptal</a>                                        
                                    
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            

            <script>
                function Duzenle(){
                    document.getElementById('baslik').readOnly=false;
                    document.getElementById('icerik').readOnly=false;
                    document.getElementById('duzenle').hidden=true;
                    document.getElementById('ekle').hidden=false;
                    document.getElementById('iptal').hidden=false;                

                };
                 function Iptal(){
                    document.getElementById('baslik').readOnly=true;
                    document.getElementById('icerik').readOnly=true;
                    document.getElementById('duzenle').hidden=false;
                    document.getElementById('ekle').hidden=true;
                    document.getElementById('iptal').hidden=true;                
                    location.reload();
                }
            </script>